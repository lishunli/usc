<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="registerForm" type="com.usc.struts.form.RegisterForm" />
		<form-bean name="loginForm" type="com.usc.struts.form.LoginForm" />
	</form-beans>
	<global-exceptions />
	<global-forwards>
	</global-forwards>
	<action-mappings>
		<action attribute="registerForm" input="/register.jsp" name="registerForm"
			path="/register" scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="success" path="/registersuccess.jsp" redirect="true" />
			<forward name="input" path="/register.jsp" redirect="true" />
		</action>
		<action attribute="loginForm" input="/login.jsp" name="loginForm"
			path="/login" scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="success" path="/loginsuccess.jsp" redirect="true" />
			<forward name="input" path="/login.jsp" redirect="true" />
		</action>
	</action-mappings>
	<message-resources parameter="com.usc.struts.ApplicationResources" />
</struts-config>