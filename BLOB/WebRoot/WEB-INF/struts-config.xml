<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
  <data-sources />
  <form-beans >
    <form-bean name="indexForm" type="com.web.IndexForm" />

  </form-beans>

  <global-exceptions />
  <global-forwards />
  <action-mappings >
    <action
      attribute="indexForm"
      input="/index.jsp"
      name="indexForm"
      path="/index"
      scope="request"
      type="com.web.IndexAction">
      <forward
        name="success"
        path="/show.jsp"
        redirect="true" />
    </action>

  </action-mappings>

  <message-resources parameter="com.web.ApplicationResources" />
</struts-config>

