<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!-- ===================================================================== -->
<!--                                                                       -->
<!--  Log4j Configuration                                                  -->
<!--                                                                       -->
<!-- ===================================================================== -->

<!-- $Id$ -->

<!--
   | For more configuration infromation and examples see the Jakarta Log4j
   | owebsite: http://jakarta.apache.org/log4j
 -->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true">

  <!--
  ############################
  # Appenders START          #
  ############################
  -->

  <!-- This appender should not be used in production -->
  <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <param name="Threshold" value="DEBUG"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d [%p] %t [%c{2}] %m%n"/>
    </layout>
  </appender>

  <!-- Appender: MSS (Daily) -->
  <!-- appender name="MSS_DAILY" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="logs/mss.log"/>
    <param name="Append" value="true"/>
    <param name="DatePattern" value="'.'yyyy-MM-dd"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d [%p] %t [%c{2}] %m%n"/>
    </layout>
  </appender -->

  <!-- Appender: MSS (File Size) -->
  <appender name="MSS_FILE" class="org.apache.log4j.RollingFileAppender">
    <param name="File" value="logs/egiog.log"/>
    <param name="Append" value="true"/>
    <param name="MaxFileSize" value="3MB"/>
    <param name="MaxBackupIndex" value="100"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d [%p] %t [%c{2}] %m%n"/>
    </layout>
  </appender>


  <!-- Appender: MSS (File Size)-->
  <appender name="DS_FILE" class="org.apache.log4j.RollingFileAppender">
    <param name="File" value="logs/ds.log"/>
    <param name="Append" value="true"/>
    <param name="MaxFileSize" value="10MB"/>
    <param name="MaxBackupIndex" value="100"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d [%p] %t [%c{2}] %m%n"/>
    </layout>
  </appender>


  <!-- Appender: Batch Job Error Email -->
  <appender name="BATCH_ERROR_MAIL" class="org.apache.log4j.net.SMTPAppender">
    <param name="BufferSize" value="512" />
    <param name="SMTPHost" value="smtp.taifook.net" />
    <param name="From" value="MSSD-BATCH@taifook.com" />
    <param name="To" value="tcshum@taifook.com" />
    <param name="Subject" value="[MSS] Error In Batch Job" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="[%d]%n%n%-5p%n%n%c%n%n%m%n%n" />
    </layout>
    <filter class="org.apache.log4j.varia.LevelRangeFilter">
      <param name="LevelMin" value="ERROR"/>
      <param name="LevelMax" value="FATAL"/>
    </filter>
  </appender>

<!--  <param name="ConversionPattern" value="[%d]%n%n%-5p%n%n%c%n%n%m%n%n" /> -->
<appender name="ERROR_MAIL" class="org.apache.log4j.net.SMTPAppender">
    <param name="BufferSize" value="512" />
    <param name="SMTPHost" value="172.26.2.13" />
    <param name="From" value="egiog@taifook.com" />
    <param name="To" value="tkchan@taifook.com" />
    <param name="Subject" value="EGIOG Error" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%n%n%m%n%n" />
    </layout>
    <filter class="org.apache.log4j.varia.LevelRangeFilter">
      <param name="LevelMin" value="ERROR"/>
      <param name="LevelMax" value="FATAL"/>
    </filter>
  </appender>


  <!--
  ############################
  # Appenders END            #
  ############################
  -->


  <!--
  ############################
  # Loggers START            #
  ############################
  -->
  <!-- logger: Apache -->
  <logger name="org.apache">
    <level value="WARN"/>
  </logger>

  <logger name="org.apache.cxf">
    <level value="ERROR"/>
  </logger>

  <!-- logger: MSS Application -->
  <logger name="com.taifook.mtss.mss">
    <level value="DEBUG"/>
  </logger>

  <logger name="MSS_BATCH_ERROR_LOGGER">
    <level value="ERROR"/>
<!--
    <appender-ref ref="BATCH_ERROR_MAIL"/>
-->
  </logger>

  <logger name="MSS_ERROR_LOGGER">
    <level value="INFO"/>
    <appender-ref ref="ERROR_MAIL"/>
  </logger>


  <!-- logger: Spring JMS -->
  <logger name="org.springframework.jms">
    <level value="ERROR" />
  </logger>

  <logger name="com.taifook.mtss.mss.ds" additivity="false">
    <level value="ERROR"/>
<!--
    <appender-ref ref="DS_FILE" />
-->
  </logger>

  <!-- Root logger -->
  <root>
    <level value="WARN" />
    <appender-ref ref="MSS_FILE"/>
    <!-- appender-ref ref="MSS_DAILY"/-->
    <appender-ref ref="CONSOLE"/>
  </root>
  <!--
  ############################
  # Loggers END              #
  ############################
  -->
</log4j:configuration>

