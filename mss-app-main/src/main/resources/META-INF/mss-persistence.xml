<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
            version="1.0">
    
    <persistence-unit name="mss" transaction-type="RESOURCE_LOCAL">

        <class>com.taifook.mtss.mss.currency.model.Currency</class>
        <class>com.taifook.mtss.mss.currency.model.CurrencyName</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.ejb.interceptor" value="com.taifook.mtss.framework.app.persistence.hibernate.ChildUpdateAwareInterceptor"/>
        </properties>
    </persistence-unit>

</persistence>

