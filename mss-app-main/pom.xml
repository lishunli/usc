    <name>MSS Application Main</name>
    <packaging>jar</packaging>
    <description>MSS Application Main</description>

    <!--
    #####################################################
    ## Build properties
    #####################################################
    -->
    <properties>
        <mss.dbschema.version>0.0.1.0</mss.dbschema.version>
    </properties>

    <dependencies>

