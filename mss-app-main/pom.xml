        </dependency>
        <dependency>
            <groupId>org.apache.xbean</groupId>
            <artifactId>xbean-spring</artifactId>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <!--
                ####################################################
                ## Main application resources
                ####################################################
             -->
            <resource>
                <directory>${basedir}/src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>build-info.properties</include>
                </includes>
            </resource>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>build-info.properties</exclude>
                </excludes>
            </resource>
            <!--
                ####################################################
                ## Main application external config
                ####################################################
             -->
            <resource>
                <directory>${basedir}/src/main/extconf</directory>
                <targetPath>extconf</targetPath>
            </resource>

        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <DB-Schema-Version>${mss.dbschema.version}</DB-Schema-Version>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <!--
    #####################################################
    ## Profiles
    #####################################################
    -->
    <profiles>
        <profile>
            <id>mss.skipGenProcWs</id>
            <activation>
                <property>
                    <name>mss.genProcWs</name>
                    <value>false</value>
                </property>
            </activation>

            <properties>
                <maven.apt.skip>true</maven.apt.skip>
                <mss.java2wsdl.skip>true</mss.java2wsdl.skip>
            </properties>

        </profile>
    </profiles>
</project>
