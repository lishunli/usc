        </dependency>

        <dependency>
            <groupId>com.taifook.mtss.mtss-fw</groupId>
            <artifactId>mtss-fw-app-core</artifactId>
        </dependency>

        <dependency>
            <groupId>com.taifook.mtss.mtss-fw</groupId>
            <artifactId>mtss-fw-app-proc-ws-runtime</artifactId>
        </dependency>

        <dependency>
            <groupId>com.taifook.mtss.mtss-fw</groupId>
            <artifactId>mtss-fw-test</artifactId>
            <scope>test</scope>
        </dependency>

        <!--
        #####################################################
        ## Spring
        #####################################################
