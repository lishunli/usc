<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
	<data-sources />
	<form-beans>
		<form-bean name="loginForm" type="com.usc.struts.form.LoginForm" />
		<form-bean name="addStudentForm" type="com.usc.struts.form.AddStudentForm" />
		<form-bean name="initForm" type="com.usc.struts.form.InitForm" />
		<form-bean name="listAllStudentForm" type="com.usc.struts.form.ListAllStudentForm" />
		<form-bean name="updateStudentForm" type="com.usc.struts.form.UpdateStudentForm" />
		<form-bean name="searchbynoForm" type="com.usc.struts.form.SearchbynoForm" />
		<form-bean name="serachbynameForm" type="com.usc.struts.form.SerachbynameForm" />
	</form-beans>
	<global-exceptions />
	<global-forwards />
	<action-mappings>
		<action attribute="loginForm" input="/login.jsp" name="loginForm"
			path="/login" scope="request" validate="true"
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="input" path="/login.jsp"></forward>
		</action>
		<action attribute="addStudentForm" input="/addStudent.jsp"
			name="addStudentForm" path="/addStudent" scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy" validate="true">
			<forward name="success" path="/listAllStudent.do?pageNo=1"></forward>
			<forward name="error" path="/adderror.jsp"></forward>
		</action>
		<action path="/init" scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="success" path="/addStudent.jsp" redirect="true"></forward>
		</action>
		<action attribute="listAllStudentForm" input="/listAllStudent.jsp"
			name="listAllStudentForm" path="/listAllStudent" scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="success" path="/listAllStudent.jsp"></forward>
		</action>
		<action path="/deleteStudent" scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="success" path="/listAllStudent.do?pageNo=1"></forward>
		</action>
		<action attribute="updateStudentForm" input="/updateStudent.jsp"
			name="updateStudentForm" path="/updateStudent" scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy" validate="true">
			<forward name="success" path="/listAllStudent.do?pageNo=1"></forward>
			<forward name="error" path="/updateerror.jsp"></forward>
		</action>
		<action path="pagenotfind" unknown="true" forward="/pagenotfind.jsp" />
		<action path="/loginOut"
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="success" path="/index.jsp"></forward>
		</action>
		<action path="/updatePStudent"
			type="org.springframework.web.struts.DelegatingActionProxy" scope="session">
			<forward name="success" path="/updateStudent.jsp" redirect="true"></forward>
		</action>
		<action attribute="searchbynoForm" input="/searchbyno.jsp"
			name="searchbynoForm" path="/searchbyno" scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="success" path="/serach.jsp"></forward>
		</action>
		<action attribute="serachbynameForm" input="/serachbyname.jsp"
			name="serachbynameForm" path="/serachbyname" scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="success" path="/serach.jsp"></forward>
		</action>
		<action path="/excel"
			type="org.springframework.web.struts.DelegatingActionProxy"/>
		<action path="/pdf"
			type="org.springframework.web.struts.DelegatingActionProxy"/>
	</action-mappings>
	<message-resources parameter="com.usc.struts.ApplicationResources" />
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml,
               /WEB-INF/validation.xml" />
	</plug-in>
</struts-config>