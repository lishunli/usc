<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
     "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
     "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">
<form-validation>
	<global>
	</global>
	<formset>
		<form name="loginForm">
			<field property="username" depends="required">
				<msg key="login.error.username.required" name="required" />
			</field>
			<field property="password" depends="required">
				<msg key="login.error.password.required" name="required" />
			</field>
		</form>
		<form name="addStudentForm">
			<field property="sno" depends="required,mask">
				<msg key="add.error.sno.required" name="required" />
				<msg key="add.error.sno" name="mask" />
				<arg key="${var:mask}" name="mask" />
				<var>
					<var-name>mask </var-name>
					<var-value>^\d{11}$</var-value>
				</var>
			</field>
			<field property="sname" depends="required">
				<msg key="add.error.sname.required" name="required" />
			</field>
			<field property="sex" depends="required">
				<msg key="add.error.sex.required" name="required" />
			</field>
			<field property="age" depends="required,integer">
				<msg key="add.error.age.required" name="required" />
				<msg key="add.error.age" name="integer" />
			</field>
			<field property="gname" depends="required">
				<msg key="add.error.gname.required" name="required" />
			</field>
		</form>
	</formset>
</form-validation>