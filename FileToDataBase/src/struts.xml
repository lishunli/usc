<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.i18n.encoding" value="utf8" />
	<constant name="struts.custom.i18n.resources" value="message"></constant>
	<package name="file" namespace="/" extends="struts-default">
		<action name="upload" class="UploadAction">
			<result name="input">/upload.jsp</result>
			<!--			<result name="success">fileConver</result>-->
			<result name="success" type="chain">
				<param name="actionName">fileConver</param>
			</result>

			<!--			<result name="success">/upload.jsp</result>-->
			<interceptor-ref name="fileUpload">
				<!--大家可以设置成自己的配置，想文件类型和大小等限制			-->
				<!--
					<param name="maximumSize">2097152</param>单位是字节 2M （2097152B）
				-->
				<param name="allowedTypes">application/vnd.ms-excel,application/octet-stream</param>

				<!--					容许文件类型为xls,dbf-->

			</interceptor-ref>
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>

		<action name="fileConver" class="FileConvertAction">
			<result name="input" type="redirect">/upload.jsp</result>
			<result name="success">/index.jsp</result>
		</action>


		<action name="exportXLS" class="ExportXLSAction">
			<result name="success">index.jsp</result>
		</action>

		<action name="exportDBF" class="ExportDBFAction">
			<result name="success">index.jsp</result>
		</action>
		
	</package>
</struts>